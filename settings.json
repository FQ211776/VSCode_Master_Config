{
    // ## 001 ###################################### Fuentes #######################################
    //
    // #### de la terminal
    "terminal.integrated.fontFamily": "BitstreamVeraSansMono Nerd Font",
    //
    // #### del editor
    "editor.fontFamily": "PragmataPro Liga",
    "editor.fontLigatures": true,
    //
    // #### Tamaño de fuentes
    "debug.console.fontSize": 12,
    "editor.suggestFontSize": 12,
    "markdown.preview.fontSize": 12,
    "terminal.integrated.fontSize": 12,
    "errorLens.fontSize": "11",
    "editor.fontSize": 16,
    //"editor.letterSpacing": 1.0,
    //"editor.lineHeight": 22,
    //
    // ## 002 ###################################### Reglas en la pantalla  ########################
    //
    "editor.rulers": [
        80,
        100,
        120
    ],
    //
    //
    // ## 003 ###################################### algunas configuraciones de la terminal integrada ##
    "terminal.integrated.tabs.enabled": true,
    "terminal.integrated.smoothScrolling": true,
    //
    //
    // ## 004 ###################################### Extension GitDoc para hacer auto commits al salvar
    "gitdoc.enabled": false,
    //
    //
    // ## 005 ###################################### Corrector de ortografía #######################
    // code --install-extension streetsidesoftware.code-spell-checker
    // code --install-extension streetsidesoftware.code-spell-checker-spanish
    "cSpell.language": "en,es",
    "cSpell.showStatus": true,
    "cSpell.userWords": [
        "alfazero",
        "appbar",
        "ARGB",
        "autofetch",
        "autofocus",
        "Autoguardado",
        "autovalidate",
        "buildable",
        "cupertino",
        "Cupertino",
        "dartpad",
        "Diagnosticable",
        "discoverability",
        "endtemplate",
        "entrantly",
        "firestore",
        "gitdoc",
        "gnupg",
        "gpgconf",
        "gpgsign",
        "initializers",
        "jacobr",
        "keyid",
        "microtask",
        "mkdir",
        "mocktail",
        "myapp",
        "NEWKEYHERE",
        "nullable",
        "nullsafety",
        "reentrantly",
        "reparent",
        "reparenting",
        "Reparenting",
        "Schyler",
        "signingkey",
        "spanish",
        "stringification",
        "subclassing",
        "subwidgets",
        "unregisters",
        "unsync",
        "useb",
        "uuid",
        "wireframe",
        "writeln",
        "youtube"
    ],
    "cSpell.ignorePaths": [
        "plantillas/**", // Doesn't currently work due to how the current working directory is determined.
        "plantillas/",
        "node_modules", // this will ignore anything the node_modules directory
        "**/node_modules", // the same for this one
        "**/node_modules/**", // the same for this one
        "node_modules/**", // Doesn't currently work due to how the current working directory is determined.
        "vscode-extension", //
        ".git", // Ignore the .git directory
        "*.dll", // Ignore all .dll files.
        "**/*.dll" // Ignore all .dll files
    ],
    //
    //
    // ## 002 ###################################### bracket-pair-colorizer-2 ######################
    // code --install-extension CoenraadS.bracket-pair-colorizer-2
    "bracket-pair-colorizer-2.colors": [
        "#fafafa",
        "#9F51B6",
        "#F7C244",
        "#F07850",
        "#9CDD29",
        "#0098FA"
    ],
    "bracket-pair-colorizer-2.depreciation-notice": false,
    //
    //
    // ## 002 ###################################### El sticky scroll lo mejor desde q se invento el intellsense
    "editor.stickyScroll.enabled": true,
    //
    //
    // ## 002 ###################################### Usar siempre la UI de VSCode y no la nativa del OS
    "window.dialogStyle": "custom",
    "window.titleBarStyle": "custom",
    //
    //
    // ## 002 ###################################### Personalizar Apariencia #############################
    //
    // #### iconos
    "workbench.iconTheme": "material-icon-theme",
    //
    // #### tema
    "workbench.colorTheme": "Andromeda",
    //
    // ### colores e iconos personalizados
    "workbench.colorCustomizations": {
        "editor.lineHighlightBackground": "#1073cf2d",
        "editor.lineHighlightBorder": "#9fced11f",
        // "[Material Theme Darker]": {
        "material-icon-theme.folders.associations": {
            "infrastructure": "Cluster",
            "stripe": "Resource",
            "global_state": "global",
            "ui": "Cluster",
            "bloc": "Resource"
        },
        "[One Dark Pro Flat]": {
            "titleBar.inactiveBackground": "#eaeff3",
            "statusBar.debuggingBackground": "#212121",
            "activityBarBadge.background": "#FFA000",
            "activityBar.activeBorder": "#FFA000",
            "list.activeSelectionForeground": "#FFA000",
            "list.inactiveSelectionForeground": "#FFA000",
            "list.highlightForeground": "#FFA000",
            "scrollbarSlider.activeBackground": "#FFA00050",
            "editorSuggestWidget.highlightForeground": "#FFA000",
            "textLink.foreground": "#FFA000",
            "progressBar.background": "#FFA000",
            "pickerGroup.foreground": "#FFA000",
            "tab.activeBorder": "#FFA000",
            "notificationLink.foreground": "#FFA000",
            "editorWidget.resizeBorder": "#FFA000",
            "editorWidget.border": "#FFA000",
            "settings.modifiedItemIndicator": "#FFA000",
            "settings.headerForeground": "#FFA000",
            "panelTitle.activeBorder": "#FFA000",
            "breadcrumb.activeSelectionForeground": "#FFA000",
            "menu.selectionForeground": "#FFA000",
            "menubar.selectionForeground": "#FFA000",
            "editor.findMatchBorder": "#FFA000",
            "selection.background": "#FFA00040",
            "statusBarItem.remoteBackground": "#FFA000"
        },
    },
    //
    //
    // ## 002 ###################################### Relacionados con git ##########################
    "git.enableSmartCommit": true,
    "git.confirmSync": false,
    "git.allowForcePush": true,
    "git.autofetch": "all",
    //
    //
    // ## 002 ###################################### Relacionados con el explorador de archivos ####
    "explorer.sortOrder": "type", // Ordena los archivos por tipo de extension
    "explorer.confirmDragAndDrop": false, // arrastrar archivos
    "explorer.autoReveal": true, // Automostrarse
    "explorer.confirmDelete": false, // no pide autorización para borrar archivos
    //
    //
    // ## 002 ###################################### Relacionados con el editor ####################
    "editor.autoClosingBrackets": "always",
    "editor.autoClosingOvertype": "always",
    "editor.autoClosingDelete": "always",
    "editor.autoClosingQuotes": "always",
    "editor.inlineSuggest.enabled": true,
    "editor.formatOnSave": true,
    "editor.formatOnPaste": true, // format text whenever its pasted into a file
    "editor.trimAutoWhitespace": true, // remove trailing auto inserted whitespace
    "editor.matchBrackets": "always", // highlight matching brackets when one of them is selected
    "editor.codeLens": true, // controls if the editor shows code lenses
    "editor.smoothScrolling": true, // controls whether the editor will scroll using an animation.
    "editor.cursorBlinking": "expand", // control the cursor blinking animation style
    "editor.cursorSurroundingLines": 15, //wtf dude
    "editor.cursorSmoothCaretAnimation": true, // controls whether the smooth caret animation should be enabled.
    "editor.mouseWheelZoom": true, // zoom the font of the editor when using mouse wheel and holding Ctrl
    "editor.minimap.renderCharacters": false, //render color blocks instead of the actual characters in minimap
    "editor.minimap.enabled": true, //will disable minimap
    "editor.selectionHighlight": false,
    "editor.suggest.snippetsPreventQuickSuggestions": false,
    "editor.suggestSelection": "first",
    "editor.tabCompletion": "onlySnippets",
    "editor.wordBasedSuggestions": false,
    "editor.renderWhitespace": "none",
    "editor.cursorStyle": "line",
    "editor.colorDecorators": true,
    "editor.linkedEditing": true,
    "editor.tabSize": 2,
    "editor.wordWrap": "on",
    "editor.wordWrapColumn": 80,
    //
    //
    // ## 002 ###################################### Archivos a excluir de busquedas y explorador ##
    // Configure glob patterns for excluding files and folders.
    // For example, the files explorer decides which files and folders to show
    // or hide based on this setting.
    // Read more about glob patterns [here](https://code.visualstudio.com/docs/editor/codebasics#_advanced-search-options).
    "files.exclude": {
        "**/*.js": {
            "when": "$(basename).ts"
        },
        "**/*.js.map": true,
        "**/._*": true,
        "**/.git": true,
        "**/node_modules": true,
        "**/node_modules/**": false,
        "**/target": true,
        ".idea": true,
        ".metadata": true,
        ".vscode": true,
        "build": false,
        "node_modules": true,
        "**/.svn": true,
        "**/.hg": true,
        "**/CVS": true,
        "**/.DS_Store": true
    },
    // Configure glob patterns for excluding files and folders in searches.
    // Inherits all glob patterns from the `files.exclude` setting.
    // Read more about glob patterns [here](https://code.visualstudio.com/docs/editor/codebasics#_advanced-search-options).
    "search.exclude": {
        "**/.git": true,
        "**/bower_components": true,
        "**/tmp": true,
        "build/**": true,
        "node_modules/**": true,
        "**/node_modules": true,
    },
    // Configure glob patterns of file paths to exclude from file watching.
    // Patterns must match on absolute paths
    // (i.e. prefix with ** or the full path to match properly).
    // Changing this setting requires a restart.
    // When you experience Code consuming lots of cpu time on startup,
    // you can exclude large folders to reduce the initial load.
    "files.watcherExclude": {
        "**/.git/objects/**": true,
        "**/.git/subtree-cache/**": true,
        "**/node_modules/*/**": true
    },
    //
    //
    // ## 002 ###################################### Autoguardado de los archivos ######################################
    "files.autoSave": "afterDelay",
    "files.autoSaveDelay": 1000,
    "files.insertFinalNewline": true,
    "files.trimTrailingWhitespace": true,
    //
    //
    // ## 002 ###################################### Automáticamente actualizar las extensiones##########################
    "extensions.autoUpdate": true,
    "problems.defaultViewMode": "table",
    "problems.showCurrentInStatus": true,
    //
    //
    // ## 002 ###################################### github copilot #########################s##########################
    // code --install-extension GitHub.copilot
    "github.copilot.enable": {
        "*": true,
        "yaml": false,
        "plaintext": true,
        "markdown": false
    },
    //
    //
    // ## 002 ###################################### Para hacer las presentaciones del codigo ##########################
    //code --install-extension jspolancor.presentationmode
    "presentationMode.zoomLevel": 4,
    //
    //
}
